@* Добавляем модели взаимодействия *@
@* Например, для связи формы и модели *@
@model Contact
@{
    ViewData["Title"] = "Обратная связь";
}

<h1>Обратная связь</h1>

<form method="post"  
    @* action="/contacts/post_check" - указываем обработчик запроса (адрес) *@ 
    asp-controller="Contacts" asp-action="Check" @* - указываем обработчик запроса (контроллер и его метод) *@>

    <label asp-for="Fullname"></label>
    <input asp-for="Fullname" />
    <span asp-validation-for="Fullname"></span>

        <label asp-for="Age"></label>
    <input asp-for="Age" />
    <span asp-validation-for="Age"></span>

        <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="Email"></span>

    <label asp-for="Message"></label>
    <input asp-for="Message" />
    <span asp-validation-for="Message"></span>

    <input type="submit" value="Отправить" />

</form>